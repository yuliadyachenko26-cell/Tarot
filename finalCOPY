    function drawCard() {
      const randomIndex = Math.floor(Math.random() * cards.length);
      const card = cards[randomIndex];
      
      document.getElementById('symbol').textContent = card.symbol;
      document.getElementById('title').textContent = card.title;
      document.getElementById('description').textContent = card.description;
      
      const cardElement = document.getElementById('card');
      cardElement.style.transform = 'rotateY(360deg)';
      setTimeout(() => {
        cardElement.style.transform = 'rotateY(0deg)';
      }, 600);
    }

    function updateDate() {
      const today = new Date();
      const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
      document.getElementById('date').textContent = today.toLocaleDateString('en-US', options);
    }

    updateDate();
    drawCard();
  </script>

